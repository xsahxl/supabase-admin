# Supabase 配置
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=企业管理系统

# 认证配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 文件上传配置
NEXT_PUBLIC_MAX_FILE_SIZE=52428800 # 50MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 开发配置
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# 监控配置 (可选)
SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# 第三方服务配置 (可选)
GOOGLE_ANALYTICS_ID=your-ga-id-here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id-here 